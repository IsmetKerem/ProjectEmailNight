@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - EmailNight</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPk5dHu5K9dKl8Rl6cCfQ76cEmkC0QdOHQ88vJd2H/05+Yl4dX+IT3Ug=="
          crossorigin="anonymous" referrerpolicy="no-referrer">

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js" defer></script>

    <link rel="stylesheet" href="~/emailthema/css/style.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="layout">
        <!-- SIDEBAR -->
        <aside class="layout__sidebar sidebar">
            <div class="sidebar__brand">
                <div class="sidebar__brand-main">
                    <div class="sidebar__logo">
                        <i class="fa-solid fa-paper-plane"></i>
                    </div>
                    <div>
                        <div class="sidebar__title">EmailNight</div>
                        <div class="sidebar__tagline">Gelen kutunuzu yönetin</div>
                    </div>
                </div>
                <button class="sidebar__toggle" type="button" data-sidebar-toggle>
                    <i class="fa-solid fa-bars"></i>
                </button>
            </div>

            <nav aria-label="Ana menü">
                <p class="sidebar__section-title">Genel</p>
                <ul class="sidebar__nav">
                    <li class="sidebar__item">
                        <a class="sidebar__link @(currentController == "Dashboard" ? "sidebar__link--active" : "")" 
                           asp-controller="Dashboard" asp-action="Index">
                            <span class="sidebar__link-icon">
                                <i class="fa-solid fa-chart-line"></i>
                            </span>
                            <span>Kontrol Paneli</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__link @(currentAction == "Inbox" ? "sidebar__link--active" : "")" 
                           asp-controller="Email" asp-action="Inbox">
                            <span class="sidebar__link-icon">
                                <i class="fa-solid fa-inbox"></i>
                            </span>
                            <span>Gelen Kutusu</span>
                            <span class="sidebar__link-badge" id="sidebar-unread-badge">
                                @(ViewBag.UnreadCount ?? 0)
                            </span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__link @(currentAction == "Sent" ? "sidebar__link--active" : "")" 
                           asp-controller="Email" asp-action="Sent">
                            <span class="sidebar__link-icon">
                                <i class="fa-solid fa-paper-plane"></i>
                            </span>
                            <span>Gönderilenler</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__link @(currentAction == "Starred" ? "sidebar__link--active" : "")" 
                           asp-controller="Email" asp-action="Starred">
                            <span class="sidebar__link-icon">
                                <i class="fa-solid fa-star"></i>
                            </span>
                            <span>Yıldızlı</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__link @(currentAction == "Drafts" ? "sidebar__link--active" : "")" 
                           asp-controller="Email" asp-action="Drafts">
                            <span class="sidebar__link-icon">
                                <i class="fa-solid fa-file"></i>
                            </span>
                            <span>Taslaklar</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__link @(currentAction == "Compose" ? "sidebar__link--active" : "")" 
                           asp-controller="Email" asp-action="Compose">
                            <span class="sidebar__link-icon">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </span>
                            <span>Yeni E-posta</span>
                        </a>
                    </li>
                </ul>

                <p class="sidebar__section-title">Kategoriler</p>
                <ul class="sidebar__nav">
                    <li class="sidebar__item">
                        <a class="sidebar__link" asp-controller="Email" asp-action="Category" asp-route-id="1">
                            <span class="sidebar__link-icon" style="color: #4285F4;">
                                <i class="fa-solid fa-inbox"></i>
                            </span>
                            <span>Birincil</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__link" asp-controller="Email" asp-action="Category" asp-route-id="2">
                            <span class="sidebar__link-icon" style="color: #34A853;">
                                <i class="fa-solid fa-users"></i>
                            </span>
                            <span>Sosyal</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__link" asp-controller="Email" asp-action="Category" asp-route-id="3">
                            <span class="sidebar__link-icon" style="color: #FBBC05;">
                                <i class="fa-solid fa-tag"></i>
                            </span>
                            <span>Promosyon</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__link" asp-controller="Email" asp-action="Category" asp-route-id="4">
                            <span class="sidebar__link-icon" style="color: #EA4335;">
                                <i class="fa-solid fa-briefcase"></i>
                            </span>
                            <span>İş</span>
                        </a>
                    </li>
                </ul>

                <p class="sidebar__section-title">Hesap</p>
                <ul class="sidebar__nav">
                    @if(User.IsInRole("Admin"))
                    {
                        <li class="sidebar__item">
                            <a class="sidebar__link @(currentController == "Admin" ? "sidebar__link--active" : "")" 
                               asp-controller="Admin" asp-action="Index">
                                <span class="sidebar__link-icon" style="color: #ef4444;">
                                    <i class="fa-solid fa-shield-halved"></i>
                                </span>
                                <span>Admin Panel</span>
                            </a>
                        </li>
                    }
                    <li class="sidebar__item">
                        <a class="sidebar__link @(currentController == "Profile" ? "sidebar__link--active" : "")" 
                           asp-controller="Profile" asp-action="Index">
                            <span class="sidebar__link-icon">
                                <i class="fa-solid fa-user-circle"></i>
                            </span>
                            <span>Profil</span>
                        </a>
                    </li>
                    <li class="sidebar__item">
                        <a class="sidebar__link" asp-controller="Profile" asp-action="Settings">
                            <span class="sidebar__link-icon">
                                <i class="fa-solid fa-gear"></i>
                            </span>
                            <span>Ayarlar</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <footer class="sidebar__footer">
                <form asp-controller="Account" asp-action="Logout" method="post" style="margin: 0;">
                    <button type="submit" class="sidebar__link" style="width: 100%; border: none; background: none; cursor: pointer; text-align: left;">
                        <span class="sidebar__link-icon">
                            <i class="fa-solid fa-right-from-bracket"></i>
                        </span>
                        <span>Çıkış Yap</span>
                    </button>
                </form>
            </footer>
        </aside>

        <!-- MAIN CONTENT -->
        <div class="layout__main">
            <!-- TOPBAR -->
            <header class="topbar">
                <div class="topbar__left">
                    <h1 class="topbar__title">@ViewData["PageTitle"]</h1>
                    <div class="topbar__search">
                        <form asp-controller="Email" asp-action="Search" method="get" style="display: flex; align-items: center; width: 100%;">
                            <i class="fa-solid fa-magnifying-glass topbar__search-icon"></i>
                            <input type="search" 
                                   name="q" 
                                   class="topbar__search-input" 
                                   placeholder="E-postalarda ara..." 
                                   aria-label="E-postalarda ara"
                                   value="@ViewBag.SearchQuery"
                                   autocomplete="off">
                        </form>
                    </div>
                </div>

                <div class="topbar__right">
                    <!-- Bildirim Butonu -->
                    <div class="notification-dropdown">
                        <button class="topbar__icon-btn topbar__icon-btn--badge" type="button" id="notification-btn" aria-label="Bildirimler">
                            <span class="topbar__icon-badge" id="notification-badge" style="display: none;"></span>
                            <i class="fa-regular fa-bell"></i>
                        </button>
                        <div class="notification-dropdown__menu" id="notification-menu">
                            <div class="notification-dropdown__header">
                                <span>Bildirimler</span>
                                <button type="button" class="notification-dropdown__clear" onclick="clearAllNotifications()">
                                    Tümünü temizle
                                </button>
                            </div>
                            <div class="notification-dropdown__list" id="notification-list">
                                <div class="notification-dropdown__empty">
                                    <i class="fa-regular fa-bell-slash"></i>
                                    <span>Bildirim yok</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <button class="topbar__icon-btn" type="button" aria-label="Tema değiştir">
                        <i class="fa-regular fa-moon"></i>
                    </button>
                    <button class="topbar__profile" type="button">
                        <span class="topbar__avatar">@(ViewBag.CurrentUser?.Name?.Substring(0,1))@(ViewBag.CurrentUser?.Surname?.Substring(0,1))</span>
                        <span class="topbar__user">
                            <span class="topbar__user-name">@ViewBag.CurrentUser?.Name @ViewBag.CurrentUser?.Surname</span>
                            <span class="topbar__user-role">@ViewBag.CurrentUser?.Email</span>
                        </span>
                        <i class="fa-solid fa-chevron-down" style="font-size: 0.65rem"></i>
                    </button>
                </div>
            </header>

            <!-- PAGE CONTENT -->
            <main class="content">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Toast Container -->
    <div class="toast-container" id="toast-container"></div>

    <!-- SignalR -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    
    <script src="~/emailthema/js/script.js"></script>
    
    <!-- SignalR Notification Script -->
    <script>
        // SignalR bağlantısı
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub")
            .withAutomaticReconnect()
            .build();

        // Bildirim listesi
        let notifications = [];

        // Bağlantıyı başlat
        async function startConnection() {
            try {
                await connection.start();
                console.log("SignalR Connected!");
            } catch (err) {
                console.error("SignalR Connection Error:", err);
                setTimeout(startConnection, 5000);
            }
        }

        // Yeni e-posta bildirimi
        connection.on("ReceiveEmailNotification", function(notification) {
            console.log("New email notification:", notification);
            
            // Toast göster
            showToast(
                `📧 ${notification.senderName}`,
                notification.aiSummary || notification.subject,
                'email',
                notification.emailId
            );
            
            // Bildirim listesine ekle
            addNotificationToList(notification);
            
            // Ses çal
            playNotificationSound();
        });

        // Okunmamış sayısı güncelleme
        connection.on("UpdateUnreadCount", function(count) {
            console.log("Unread count updated:", count);
            updateUnreadBadge(count);
        });

        // Genel toast bildirimi
        connection.on("ReceiveToast", function(data) {
            showToast(data.title, data.message, data.type);
        });

        // Toast göster
        function showToast(title, message, type = 'info', emailId = null) {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = `toast toast--${type}`;
            
            const icon = type === 'email' ? 'fa-envelope' : 
                         type === 'success' ? 'fa-check-circle' :
                         type === 'error' ? 'fa-exclamation-circle' : 'fa-info-circle';
            
            toast.innerHTML = `
                <div class="toast__icon">
                    <i class="fa-solid ${icon}"></i>
                </div>
                <div class="toast__content">
                    <div class="toast__title">${title}</div>
                    <div class="toast__message">${message}</div>
                </div>
                <button class="toast__close" onclick="this.parentElement.remove()">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            `;
            
            if (emailId) {
                toast.style.cursor = 'pointer';
                toast.onclick = function(e) {
                    if (!e.target.closest('.toast__close')) {
                        window.location.href = '/Email/Detail/' + emailId;
                    }
                };
            }
            
            container.appendChild(toast);
            
            // Animasyon için
            setTimeout(() => toast.classList.add('toast--show'), 10);
            
            // 5 saniye sonra kaldır
            setTimeout(() => {
                toast.classList.remove('toast--show');
                setTimeout(() => toast.remove(), 300);
            }, 5000);
        }

        // Bildirim listesine ekle
        function addNotificationToList(notification) {
            notifications.unshift(notification);
            if (notifications.length > 10) notifications.pop();
            
            renderNotificationList();
            updateNotificationBadge();
        }

        // Bildirim listesini render et
        function renderNotificationList() {
            const list = document.getElementById('notification-list');
            
            if (notifications.length === 0) {
                list.innerHTML = `
                    <div class="notification-dropdown__empty">
                        <i class="fa-regular fa-bell-slash"></i>
                        <span>Bildirim yok</span>
                    </div>
                `;
                return;
            }
            
            list.innerHTML = notifications.map(n => `
                <a href="/Email/Detail/${n.emailId}" class="notification-dropdown__item">
                    <div class="notification-dropdown__avatar">${n.senderInitials}</div>
                    <div class="notification-dropdown__content">
                        <div class="notification-dropdown__sender">${n.senderName}</div>
                        <div class="notification-dropdown__subject">${n.subject}</div>
                        <div class="notification-dropdown__time">${formatTime(n.createdAt)}</div>
                    </div>
                    <div class="notification-dropdown__category" style="background: ${n.categoryColor}20; color: ${n.categoryColor}">
                        ${n.categoryName}
                    </div>
                </a>
            `).join('');
        }

        // Zaman formatla
        function formatTime(dateString) {
            const date = new Date(dateString);
            const now = new Date();
            const diff = (now - date) / 1000;
            
            if (diff < 60) return 'Şimdi';
            if (diff < 3600) return Math.floor(diff / 60) + ' dk önce';
            if (diff < 86400) return Math.floor(diff / 3600) + ' saat önce';
            return date.toLocaleDateString('tr-TR');
        }

        // Bildirim badge'ini güncelle
        function updateNotificationBadge() {
            const badge = document.getElementById('notification-badge');
            if (notifications.length > 0) {
                badge.style.display = 'block';
            } else {
                badge.style.display = 'none';
            }
        }

        // Sidebar unread badge'ini güncelle
        function updateUnreadBadge(count) {
            const badge = document.getElementById('sidebar-unread-badge');
            if (badge) {
                badge.textContent = count;
                badge.style.display = count > 0 ? 'inline-flex' : 'none';
            }
        }

        // Tüm bildirimleri temizle
        function clearAllNotifications() {
            notifications = [];
            renderNotificationList();
            updateNotificationBadge();
        }

        // Bildirim sesi çal
        function playNotificationSound() {
            try {
                const audio = new Audio('data:audio/wav;base64,UklGRnoGAABXQVZFZm10IBAAAAABAAEAQB8AAEAfAAABAAgAZGF0YQoGAACBhYqFbF1fdJivrJBhNjVgodDbq2EcBj+a2teleF8NQ6/n2n5pKCZRufDihmQ3OjKR7OeCaUA0M5vy7YZlPDYzkubthmU8NjOS5u2GZTw2M5Lm7YZlPDYzkubthmU8Ng==');
                audio.volume = 0.3;
                audio.play();
            } catch (e) {
                console.log('Could not play notification sound');
            }
        }

        // Bildirim dropdown toggle
        document.getElementById('notification-btn')?.addEventListener('click', function(e) {
            e.stopPropagation();
            document.getElementById('notification-menu').classList.toggle('notification-dropdown__menu--show');
        });

        // Dışarı tıklayınca kapat
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.notification-dropdown')) {
                document.getElementById('notification-menu')?.classList.remove('notification-dropdown__menu--show');
            }
        });

        // Bağlantıyı başlat
        startConnection();
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>