@model ProjectEmailNight.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Şifre Değiştir";
    ViewData["PageTitle"] = "Şifre Değiştir";
}

<div style="max-width: 500px;">
    <article class="card">
        <header class="card__header">
            <p class="card__title">
                <i class="fa-solid fa-key" style="margin-right: 0.5rem; color: #a78bfa;"></i>
                Şifre Değiştir
            </p>
        </header>

        <form asp-action="ChangePassword" method="post" style="margin-top: 1rem;">
            <div asp-validation-summary="ModelOnly" class="auth-form__error-box"></div>

            <div class="compose__row" style="border-bottom: 1px solid #1f2937; padding-bottom: 1rem; margin-bottom: 1rem;">
                <label asp-for="CurrentPassword" class="compose__label" style="width: 120px;">Mevcut Şifre</label>
                <div style="flex: 1;">
                    <input asp-for="CurrentPassword" type="password" class="compose__input" placeholder="••••••••" />
                    <span asp-validation-for="CurrentPassword" style="color: #ef4444; font-size: 0.75rem;"></span>
                </div>
            </div>

            <div class="compose__row" style="border-bottom: 1px solid #1f2937; padding-bottom: 1rem; margin-bottom: 1rem;">
                <label asp-for="NewPassword" class="compose__label" style="width: 120px;">Yeni Şifre</label>
                <div style="flex: 1;">
                    <input asp-for="NewPassword" type="password" class="compose__input" placeholder="••••••••" />
                    <span asp-validation-for="NewPassword" style="color: #ef4444; font-size: 0.75rem;"></span>
                </div>
            </div>

            <div class="compose__row" style="border-bottom: none; padding-bottom: 0; margin-bottom: 1rem;">
                <label asp-for="ConfirmPassword" class="compose__label" style="width: 120px;">Şifre Tekrar</label>
                <div style="flex: 1;">
                    <input asp-for="ConfirmPassword" type="password" class="compose__input" placeholder="••••••••" />
                    <span asp-validation-for="ConfirmPassword" style="color: #ef4444; font-size: 0.75rem;"></span>
                </div>
            </div>

            <div style="background: rgba(251, 191, 36, 0.1); padding: 0.75rem; border-radius: 0.5rem; margin-bottom: 1rem;">
                <p style="font-size: 0.8rem; color: #fbbf24; margin: 0;">
                    <i class="fa-solid fa-triangle-exclamation" style="margin-right: 0.5rem;"></i>
                    Şifreniz en az 6 karakter olmalı ve güçlü bir şifre seçmelisiniz.
                </p>
            </div>

            <div style="display: flex; gap: 0.5rem;">
                <button type="submit" class="btn btn--primary">
                    <i class="fa-solid fa-check"></i>
                    <span>Şifreyi Değiştir</span>
                </button>
                <a asp-action="Index" class="btn btn--secondary">
                    <i class="fa-solid fa-xmark"></i>
                    <span>İptal</span>
                </a>
            </div>
        </form>
    </article>
</div>